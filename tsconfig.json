    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "esModuleInterop": true, 
      "noImplicitAny": false,
      "outDir": "./tsrc"
    },
    "exclude": [
      "./node_modules"
    ],
    "compileOnSave": false
  }